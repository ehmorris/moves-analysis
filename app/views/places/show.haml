#places-list
  %input.search{ 'placeholder' => 'Search for any parameter' }
  %ul.headers
    %li
      %span.sort{ 'data-sort' => 'place' } Place Name
      %span.sort{ 'data-sort' => 'visits' } Total Visits
      %span.sort{ 'data-sort' => 'duration' } Total Duration
      %span.sort{ 'data-sort' => 'median' } Median Visit Duration
      %span.sort{ 'data-sort' => 'average' } Average Visit Duration
  %ul.list
    - @places.each do |place, visits, duration, median, average|
      %li
        %span.place= place
        %span.visits{ 'data-sort-value' => "#{visits}" }= visits
        %span.duration{ 'data-sort-value' => "#{duration}" }= distance_of_time_in_words duration
        %span.median{ 'data-sort-value' => "#{median}" }= distance_of_time_in_words median
        %span.average{ 'data-sort-value' => "#{average}" }= distance_of_time_in_words average
